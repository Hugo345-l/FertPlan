# Importação de módulos necessários
import os

# Função para limpar a tela
def limpa_tela():
    os.system('cls' if os.name == 'nt' else 'clear')

# Função para exibir o menu de gestão do sistema
def menu_gestao():
    while True:
        limpa_tela()
        print("---- Sistema FertPlan! ----")
        print("""
        1 - Cadastrar Agricultor
        2 - Cadastrar Propriedade
        3 - Cadastrar Plantação
        4 - Listar Agricultores, Propriedades e Plantações
        5 - Alterar Agricultor, Propriedade ou Plantação
        6 - Excluir Agricultor, Propriedade ou Plantação
        7 - Sair
        """)
        opcao = input("Escolha uma opção: ")

        if opcao == '1':
            cadastrar_agricultor()
        elif opcao == '2':
            cadastrar_propriedade()
        elif opcao == '3':
            cadastrar_plantacao()
        elif opcao == '4':
            listar_agricultores_propriedades_plantacoes()
        elif opcao == '5':
            alterar_agricultor_propriedade_plantacao()
        elif opcao == '6':
            excluir_agricultor_propriedade_plantacao()
        elif opcao == '7':
            print("Obrigado por usar a FertiPlan :) !!\nAté Mais!")
            break
        else:
            print("Opção inválida!")
        input("Pressione Enter para continuar...")

# Funções placeholders para cada ação do menu
def cadastrar_agricultor():
    print("Cadastro de Agricultor - Função a ser implementada")

def cadastrar_propriedade():
    print("Cadastro de Propriedade - Função a ser implementada")

def cadastrar_plantacao():
    print("Cadastro de Plantação - Função a ser implementada")

def listar_agricultores_propriedades_plantacoes():
    print("Listagem de Agricultores, Propriedades e Plantações - Função a ser implementada")

def alterar_agricultor_propriedade_plantacao():
    print("Alteração de Agricultor, Propriedade ou Plantação - Função a ser implementada")

def excluir_agricultor_propriedade_plantacao():
    print("Exclusão de Agricultor, Propriedade ou Plantação - Função a ser implementada")

# Execução do menu de gestão
if __name__ == "__main__":
    menu_gestao()